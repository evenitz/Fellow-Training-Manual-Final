<!DOCTYPE html>
<html>
  <head>
    <title>FellowTrainingManual</title>

    <%= javascript_include_tag "rails" %>
    <%= javascript_include_tag :defaults %>


    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "bootstrap.min.css" %>
    <%= stylesheet_link_tag "farbtastic.css" %>
    <%= stylesheet_link_tag "jquery-ui-1.8.19.custom.css.erb" %>
    <%= stylesheet_link_tag "speech-bubbles" %>
    <%= stylesheet_link_tag "editor.css" %>

    <%= stylesheet_link_tag "style", :media => "all" %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

    <%= javascript_include_tag "jquery-ui-1.8.19.custom.min.js" %>
    <%= javascript_include_tag "bootstrap.min.js" %>
    <%= javascript_include_tag "farbtastic" %>
    <%= javascript_include_tag "editor" %>

  </head>
  <body>
    <div id="Container">
      <header>
        <div id="CGF-Logo">
          <!--<img src="images/CGF_Logo.gif" width="480" height="100" alt=""> -->
          <%= image_tag "CGF_Logo.gif" %>
        </div>
      </header>
        <div id="Menu">
          <ul>
          ` <li><%= link_to "Library", library_path %> </li>
            <% if isAdmin? %>
              <li><%= link_to "Fellows", users_path %> </li>
            <% end %>

            <li> <a href="">Settings</a> <li>
            <% if signed_in? %>
              <li> <%= link_to "logout", signout_path %> </li>
              <li> <%= link_to "Profile", user_path(current_user)%> </li>
            <% else %>
              <li> <%= link_to "sign in", signin_path %> </li>
            <% end %>
          </ul>
        </div>
        <section>
        <div id="bread_crumb_navigation">
          <%= yield :nav %>
        </div>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <footer>
        <!--<h3> <a href="">Home</a> | <a href="">About</a> | <a href="">Contact</a> </h3> -->
        <h3> <%= link_to "Home", root_path %> </h3>
      </footer>
    </div>
  </body
</html>
