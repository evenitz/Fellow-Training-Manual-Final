<div class="page">
  <% if isAdmin? %>
    <div class="admin_page_body">
  <% else %>
    <div class="page_body">
  <% end %>
    <h2><%= page.name %> </h2>
    <p><%= page.description %></p>
  </div>
  <% if isAdmin? %>
    <div class="admin_page_open">
  <% else %>
    <div class="page_open">
  <% end %>
    <p> <%= link_to "read", page %> </p>
  </div>
  <% if isAdmin? %>
  <div class="page_tools">
    <a href=""><p> Move Up </p></a>
    <p><%= link_to "Edit", edit_page_path(page) %> </p> 
    <p><%= link_to "delete", page, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{page.name}" %></p>
    <a href=""><p> Move Down </p></a>
  </div>
  <% end %>
</div>
